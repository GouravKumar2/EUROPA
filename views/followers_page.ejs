<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/followers_page.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Figtree:ital,wght@0,300..900;1,300..900&family=Lexend:wght@100..900&family=Outfit:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
        rel="stylesheet">
</head>

<body>
    <nav>
        <div class="left">
            <a href="/">
                <h1>EUROPA</h1>
            </a>
        </div>
        <div class="right">
            <a href="/newpost" id="create-post">NEW POST</a>
            <a id="profile-icon" href="/myprofile">
                <img src="<%= user.icon %>" alt="">
            </a>
        </div>
    </nav>

    <div class="sidebar">
        <div class="profile-info">
            <img src="<%= user.icon %>" alt="">
            <h2>
                <%= user.fullname %>
            </h2>
            <div class="username">
                <p>
                    @<%= user.username %>
                </p>
            </div>
            <p>
                <%= user.bio %>
            </p>
            <div class="follow">
                <a href="/myprofile/followers">
                    <span id="followersCount">
                        <%= user.followers.length %>
                    </span> &nbsp; Followers
                </a>
                <a href="/myprofile/following">
                    <%= user.following.length%> Following
                </a>
            </div>
        </div>
        <div class="sidebar-links">
            <a href="/myprofile/edit">Edit Profile</a>
            <a href="/logout">Logout</a>
        </div>
    </div>


    <div class="main">
        <div class="followersbox">
            <h1>Followers</h1>
            <div class="followers-list">
                <!-- Begin followers loop here -->

                <%followers.forEach(function(follower) { %>

                    <div class="followcard">
                        <a href="/profile/<%=follower.username%>" class="accountinfo">
                            <img src="<%=follower.icon%>" alt="">
                            <h2>@<%=follower.username%>
                            </h2>
                        </a>
                        <div class="buttons">
                            <button onclick="removeFollower(this, '<%= follower._id %>')">Remove</button>
                        </div>
                    </div>

                    <%})%>
                        <!-- End followers loop here -->
            </div>
        </div>


    </div>

    <script>
    async function removeFollower(button, followerId) {
        try {
            const res = await fetch(`/remove-follower/${followerId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            if (!res.ok) throw new Error('Failed to remove follower');

            // Remove follower card from DOM
            const card = button.closest('.followcard');
            card.remove();

            // Update followers count
            const countSpan = document.getElementById("followersCount");
            let count = parseInt(countSpan.textContent);
            countSpan.textContent = count - 1;
        } catch (err) {
            console.error('Remove failed:', err);
        }
    }
</script>

</body>

</html>