<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Figtree:ital,wght@0,300..900;1,300..900&family=Lexend:wght@100..900&family=Outfit:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
        rel="stylesheet">
</head>

<body>
    <nav>
        <div class="left">
            <a href="/">
                <h1>EUROPA</h1>
            </a>
        </div>
        <div class="right">
            <a href="/newpost" id="create-post">NEW POST</a>
            <a id="profile-icon" href="">
                <img src="<%= user.icon %>" alt="">
            </a>
        </div>
    </nav>

    <!-- trying out sidebar with position fixed -->

    <div class="sidebar">
        <div class="profile-info">
            <img src="<%= user.icon %>" alt="">
            <h2>
                <%= user.fullname %>
            </h2>
            <div class="username">
                <p>
                    @<%= user.username %>
                </p>
            </div>
            <p>
                <%= user.bio %>
            </p>
            <div class="follow">
                <a href="/myprofile/followers"> <%= user.followers.length%> Followers</a>
                <a href="/myprofile/following"> <%= user.following.length%> Following</a>
            </div>
        </div>
        <div class="sidebar-links">
            <a href="/myprofile/edit">Edit Profile</a>
            <a href="/logout">Logout</a>
        </div>
    </div>


    <div class="main">
        <div class="your-posts-text">
            <h1>Your Posts : </h1>
        </div>

        <% if (userposts.length === 0) { %>
            <div class="no-posts">
                <p>You have not created any posts yet.</p>
            </div>
        <% } %>


        <div class="posts">


            <% userposts.forEach(function(post) { %>

                <div class="card" style= "background-color: <%= post.cardColor %>;">
                    <div class="person-details">
                        <div class="person-icon">
                            <img src="<%=user.icon%>" alt="person" />
                        </div>
                        <div class="person-name">
                            @<%=user.username%>
                        </div>
                    </div>
                    <!-- <h2>Post Title</h2> -->
                    <p>
                        <p style="white-space: pre-line;"><%= post.content %></p>
                    </p>
                    <div class="card-footer">
                        <div class="like-container">
                              <button class="like-button <%= post.likes.includes(user._id) ? 'liked' : '' %>"
                                        onclick="toggleLike(this, '<%= post._id %>')">
                                <!-- Unliked (outlined heart) -->
                                <svg class="heart-outline" xmlns="http://www.w3.org/2000/svg" height="30px"
                                    viewBox="0 -960 960 960" width="30px" fill="#42242a">
                                    <path
                                        d="m480-120-58-52q-101-91-167-157T150-447.5Q111-500 95.5-544T80-634q0-94 63-157t157-63q52 0 99 22t81 62q34-40 81-62t99-22q94 0 157 63t63 157q0 46-15.5 90T810-447.5Q771-395 705-329T538-172l-58 52Zm0-108q96-86 158-147.5t98-107q36-45.5 50-81t14-70.5q0-60-40-100t-100-40q-47 0-87 26.5T518-680h-76q-15-41-55-67.5T300-774q-60 0-100 40t-40 100q0 35 14 70.5t50 81q36 45.5 98 107T480-228Zm0-273Z" />
                                </svg>

                                <!-- Liked (filled heart) -->
                                <svg class="heart-filled" xmlns="http://www.w3.org/2000/svg" height="30px"
                                    viewBox="0 -960 960 960" width="30px" fill="#42242a">
                                    <path
                                        d="m480-120-58-52q-101-91-167-157T150-447.5Q111-500 95.5-544T80-634q0-94 63-157t157-63q52 0 99 22t81 62q34-40 81-62t99-22q94 0 157 63t63 157q0 46-15.5 90T810-447.5Q771-395 705-329T538-172l-58 52Z" />
                                </svg>
                            </button>
                            <span class="like-count">
                                <%=post.likesCount%>
                            </span>

                            <a href="/deletepost/<%=post._id%>" class="delete-button">
                                <svg xmlns="http://www.w3.org/2000/svg" height="30px" viewBox="0 -960 960 960" width="30px" fill="#e3e3e3"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg>
                            </a>
                        </div>
                    </div>
                </div>

                <% }); %>

        </div>


        
    </div>


     <script>
        async function toggleLike(button, postId) {
            const countSpan = button.nextElementSibling;
            let count = parseInt(countSpan.textContent);
            const liked = button.classList.toggle("liked");
            countSpan.textContent = liked ? count + 1 : count - 1;

            try {
                const res = await fetch(`/toggle-like/${postId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!res.ok) {
                    throw new Error('Failed to toggle like');
                }
            } catch (err) {
                console.error(err);
                // Revert UI change on error
                button.classList.toggle("liked");
                countSpan.textContent = liked ? count : count - 1;
            }
        }
    </script>
</body>

</html>