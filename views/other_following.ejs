<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/other_followers.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Figtree:ital,wght@0,300..900;1,300..900&family=Lexend:wght@100..900&family=Outfit:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
        rel="stylesheet">
</head>

<body>
    <nav>
        <div class="left">
            <a href="/">
                <h1>EUROPA</h1>
            </a>
        </div>
        <div class="right">
            <a href="/newpost" id="create-post">NEW POST</a>
            <a id="profile-icon" href="/myprofile">
                <img src="<%= user.icon %>" alt="">
            </a>
        </div>
    </nav>

    <!-- trying out sidebar with position fixed -->

    <div class="sidebar">
        <div class="profile-info">
            <img src="<%= otheruser.icon %>" alt="">
            <h2>
                <%= otheruser.fullname %>
            </h2>
            <div class="username">
                <p>
                    @<%= otheruser.username %>
                </p>
            </div>
            <p>
                <%= otheruser.bio %>
            </p>
            <div class="follow">
               <a href="/profile/<%=otheruser.username%>/followers"> <%= otheruser.followers.length%> Followers</a>
                <a href="/profile/<%=otheruser.username%>/following"> <%= otheruser.following.length%> Following</a>
            </div>
        </div>
        <div class="sidebar-links">
          <button id="followBtn" class="<%= user.following.includes(otheruser._id) ? 'following' : '' %>"
                onclick="toggleFollow('<%= otheruser._id %>')">
                <%= user.following.includes(otheruser._id) ? 'Following' : 'Follow' %>
            </button>
        </div>
    </div>


    <div class="main">
         <div class="followersbox">
            <h1>Following</h1>
            <div class="followers-list">
                <!-- Begin followers loop here -->
                <% following.forEach(function(followed) { %>
                <div class="followcard">
                    <a href="/profile/<%=followed.username%>" class="accountinfo">
                        <img src="<%=followed.icon%>" alt="">
                        <h2>@<%=followed.username%>
                        </h2>
                    </a>
                    <!-- <div class="buttons">
                        <button class="followBtn <%= user.following.includes(followed._id) ? '' : 'followactive' %>"
                            data-user-id="<%= followed._id %>" onclick="toggleFollow(this, '<%= followed._id %>')">
                            <%= user.following.includes(followed._id) ? 'Following' : 'Follow' %>
                        </button>
                    </div> -->
                </div>
                <% }); %>
                <!-- End followers loop here -->
            </div>
        </div>
    </div>


    <script>
        async function toggleFollow(otherUserId) {
            const btn = document.getElementById("followBtn");
            const followersCountSpan = document.getElementById("followersCount");
            const isFollowing = btn.classList.contains("following");

            try {
                const res = await fetch('/toggle-follow/' + otherUserId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!res.ok) throw new Error("Request failed");

                // Toggle class and text
                btn.classList.toggle("following");
                btn.textContent = isFollowing ? "Follow" : "Following";

                // Update followers count
                let currentCount = parseInt(followersCountSpan.textContent);
                followersCountSpan.textContent = isFollowing ? currentCount - 1 : currentCount + 1;

            } catch (err) {
                console.error("Follow toggle failed:", err);
            }
        }
    </script>

    
</body>

</html>